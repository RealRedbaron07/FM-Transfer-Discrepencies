{
  "manifest_version": 3,
  "name": "FM Transfer Analyzer Pro",
  "version": "2.0.0",
  "description": "Professional transfer analysis and scouting for Football Manager players",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.sportmonks.com/*",
    "https://*.transfermarkt.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "FM Transfer Analyzer Pro",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "styles.css", "app.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html",
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}